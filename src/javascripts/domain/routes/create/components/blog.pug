    h2.text-center.mdl-color-text--grey-100 {{description}}
    div.demo-blog.mdl-layout.mdl-js-layout
        div.mdl-layout__content
            div.demo-blog__posts.mdl-grid
                div.mdl-card.coffee-pic.mdl-cell.mdl-cell--8-col
                    div.mdl-card__media.mdl-color-text--grey-50
                        h3
                            a(href='entry.html') Coffee Pic
                    div.mdl-card__supporting-text.meta.mdl-color-text--grey-600
                        div.divminilogo
                        div
