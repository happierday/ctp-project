div
    h3 Give your domain a title.
    div
        mdl-textfield(@input.native='updateTitle', @keyup.enter='postDomain', :value='title', maxlength='64', floating-label='Domain Title')
    h3 And a description.
    div
        mdl-textfield(@input.native='updateDescription', @keyup.enter='postDomain', :value='description', textarea, rows='4',  maxlength='128', floating-label='Domain Description')
    div
        mdl-button(@click.native='lastPage', colored, fab)
            i.material-icons arrow_backward
        mdl-button(:disabled='emptyFields', @click.native='postDomain', colored, fab)
            i.material-icons arrow_forward