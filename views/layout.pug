                            a.mdl-navigation__link.mdl-typography--text-uppercase(href='/') Home

                    div.mdl-layout-spacer
                    nav.mdl-navigation
                        if (user)
                            button.logout-button.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--accent Log Out
                        else
                            button.login-button.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--accent Log in / Sign Up
